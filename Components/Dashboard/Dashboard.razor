@inject HttpClient Http

<h3 class="mb-4"><strong>Analytics</strong> Dashboard</h3>
<section>
    @if (tickets == null)
    {
        <div class="d-flex align-items-center col-sm-2">
            <strong>Loading...</strong>
            <div class="spinner-border ml-auto" role="status" aria-hidden="true"></div>
        </div>
    }
    else
    {
        <TopRow Tickets="tickets" />
        <BottomRow Tickets="tickets" />
    }
</section>

@code {
    //By: Priority, Type, Status, Application?
    List<Ticket> tickets;
    protected override async Task OnInitializedAsync()
    {
        tickets = await Http.GetFromJsonAsync<List<Ticket>>("https://zbooksapi.azurewebsites.net/api/tickets");
    }
}