            Tickets.Count(x => x.Date.Month == 9 && x.Type == Models.Type.Bug),
            Tickets.Count(x => x.Date.Month == 10 && x.Type == Models.Type.Bug),
            Tickets.Count(x => x.Date.Month == 11 && x.Type == Models.Type.Bug),
            Tickets.Count(x => x.Date.Month == 12 && x.Type == Models.Type.Bug)
        };

        reqTrendValArr = new int[] {
            Tickets.Count(x => x.Date.Month == 1 && x.Type == Models.Type.Request),
            Tickets.Count(x => x.Date.Month == 2 && x.Type == Models.Type.Request),
            Tickets.Count(x => x.Date.Month == 3 && x.Type == Models.Type.Request),
            Tickets.Count(x => x.Date.Month == 4 && x.Type == Models.Type.Request),
