            Tickets.Count(x => x.Date.Month == 10 && x.Type == Models.Type.Request),
            Tickets.Count(x => x.Date.Month == 11 && x.Type == Models.Type.Request),
            Tickets.Count(x => x.Date.Month == 12 && x.Type == Models.Type.Request)
            };
    }
}